<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wiski_navigation"
    app:startDestination="@id/principalFragment">

    <fragment
        android:id="@+id/principalFragment"
        android:name="com.daniel.jdcg_eva03.fragments.PrincipalFragment"
        android:label="fragment_principal"
        tools:layout="@layout/fragment_principal" >
        <action
            android:id="@+id/action_principalFragment_to_whiskiDetailFragment"
            app:destination="@id/whiskiDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoritoFragment"
        android:name="com.daniel.jdcg_eva03.favoritoFragment"
        android:label="fragment_favorito"
        tools:layout="@layout/fragment_favorito" >
        <action
            android:id="@+id/action_favoritoFragment_to_whiskiDetailFragment"
            app:destination="@id/whiskiDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/informacionFragment"
        android:name="com.daniel.jdcg_eva03.fragments.InformacionFragment"
        android:label="fragment_informacion"
        tools:layout="@layout/fragment_informacion" />
    <fragment
        android:id="@+id/whiskiDetailFragment"
        android:name="com.daniel.jdcg_eva03.fragments.WhiskiDetailFragment"
        android:label="fragment_whiski_detail"
        tools:layout="@layout/fragment_whiski_detail" />
</navigation>